---
import {
    Card,
    CardContent,
    // CardDescription,
    // CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";

import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<div class="not-prose">
    <Card>
        <CardHeader>
            <CardTitle>
                <a
                    href={`posts/${post.slug}`}
                    class="text-pink-500 hover:underline">{post.data.title}</a
                >
            </CardTitle>
        </CardHeader>
        <CardContent>
            <p>{post.data.description ?? "No description"}</p>
            <pre
                class="text-right">
                {post.data.pubDate.toLocaleDateString()}
            </pre>
        </CardContent>
    </Card>
</div>
