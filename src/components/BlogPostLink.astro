---
import {
    Card,
    CardContent,
    // CardDescription,
    // CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";
const { title, url, desc, date } = Astro.props;
---

<div class="not-prose">
    <Card>
        <CardHeader>
            <CardTitle>
                <a href={url} class="text-pink-500 hover:underline">{title}</a>
            </CardTitle>
        </CardHeader>
        <CardContent>
            <p>{desc}</p>
            <pre
                class="text-right">{date.toString().slice(0,10)}</pre></CardContent
        >
    </Card>
</div>
