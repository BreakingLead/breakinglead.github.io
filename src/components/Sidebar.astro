import { ModeToggle } from "./ThemeToggle";
---

<aside id="bar">
    <div id="bar-content">
        <a href="/" id="blog-name"> Shattered Memories </a>
        <br />
        <br />
        <a href="/"> <div>About Lead</div> </a>
        <a href="/posts"> <div>Posts</div></a>
        <a href="/links"> <div>Links</div></a>
        <a href="/gallery"> <div>Gallery</div></a>
        <a href="/tags"> <div>Tags</div></a>
    </div>
    <div id="bar-bottom">
        <p>
            <a href="https://x.com/breaking_lead_g">twitter</a>
            <a href="https://www.github.com/breakinglead">github</a>

            &nbsp;
            <ModeToggle client:load />
        </p>
