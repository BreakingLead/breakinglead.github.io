---
import {
    Card,
    CardContent,
    // CardDescription,
    // CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";
const { title, url } = Astro.props;
---

<div class="not-prose">
    <Card>
        <CardHeader>
            <CardTitle>
                <a href={url} class="text-pink-500 hover:underline">{title}</a>
            </CardTitle>
        </CardHeader>
        <CardContent>
            <p>
                <slot />
            </p>
        </CardContent>
    </Card>
</div>
